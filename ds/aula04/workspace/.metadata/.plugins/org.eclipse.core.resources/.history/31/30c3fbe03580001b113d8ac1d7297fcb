package basico;

public class Animal {

	//Atributos
	String especie;
	String raca;
	String nome;
	float peso;
	
	//Construtor simples
	public Animal() {
		especie = "Gato";
		nome = "Mimi";
		raca = "Angorá";
		peso = (float) 1.2;
	}
	
	//Construtor com parâmetros, personalizar
	public Animal(String esp, String nom, String rac, float pes) {
		especie = esp;
		nome = nom;
		raca = rac;
		peso = pes;
	}
	
	//Metodo que obtem todos os parâmetros
	public String show() {
		return especie+"\n"+raca+"\n"+nome+"\n"+peso;
	}
	
}
